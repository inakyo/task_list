<h1> Tasks#index </h1>

<%= p "あなたは" + @current_user.name + "さんです ロールは" + @current_user.role%>
<br>

<% flash.each do |key, value| %>

<p>キー名：<%= key %> </p>
<p>バリュー：<%= value%></p>
<br>
<% end %>
<!--
<%= link_to "ログアウト", logout_path , method: :delete, controller: :sessions , action: :destroy %>
-->
<%= link_to "新規登録" , controller: :tasks , action: :new %>

<table>
  <tr>
    <th>タイトル</th>
    <th>登録日時</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.title, task_path(task.id) %> </td>
    <td><%= task.created_at %> </td>
    <td><%= link_to "show", task_path(task.id),  action: :show %> </td>
    <td><%= link_to "edit", task_path(task.id),  action: :edit %> </td>
    <td><%= link_to "destroy", task_path(task.id), action: :delete %> </td>
  </tr>
  <% end %>
</table>